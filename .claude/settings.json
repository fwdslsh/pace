{
  "permissions": {
    "allow": [
      "Bash(python3 .claude/scripts/*)",
      "Read(feature_list.json)",
      "Read(progress.txt)",
      "Write(feature_list.json)",
      "Write(progress.txt)"
    ]
  },
  "hooks": {
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/scripts/pace-progress.py --check",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/scripts/pace-progress.py 2>/dev/null || true",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
