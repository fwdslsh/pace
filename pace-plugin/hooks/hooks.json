{
  "SubagentStop": [
    {
      "matcher": "",
      "hooks": [
        {
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/scripts/pace-progress.ts --check",
          "timeout": 15
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "Write",
      "hooks": [
        {
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/scripts/pace-progress.ts 2>/dev/null || true",
          "timeout": 10
        }
      ]
    }
  ],
  "Stop": [
    {
      "matcher": "",
      "hooks": [
        {
          "type": "command",
          "command": "bun ${CLAUDE_PLUGIN_ROOT}/scripts/pace-progress.ts",
          "timeout": 10
        }
      ]
    }
  ]
}
