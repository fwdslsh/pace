{
  "name": "@fwdslsh/pace",
  "version": "0.2.0",
  "description": "Pragmatic Agent for Compounding Engineering - Built on the OpenCode SDK",
  "main": "cli.ts",
  "bin": {
    "pace": "./cli.ts"
  },
  "type": "module",
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun build --compile --minify --sourcemap ./cli.ts --outfile pace",
    "build:all": "npm run build:linux-x64 && npm run build:linux-arm64 && npm run build:darwin-x64 && npm run build:darwin-arm64 && npm run build:windows-x64",
    "build:linux-x64": "bun build --compile --minify --target=bun-linux-x64 ./cli.ts --outfile pace-linux-x64",
    "build:linux-arm64": "bun build --compile --minify --target=bun-linux-arm64 ./cli.ts --outfile pace-linux-arm64",
    "build:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 ./cli.ts --outfile pace-darwin-x64",
    "build:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 ./cli.ts --outfile pace-darwin-arm64",
    "build:windows-x64": "bun build --compile --minify --target=bun-windows-x64 ./cli.ts --outfile pace-windows-x64.exe",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' *.ts"
  },
  "keywords": [
    "ai",
    "agent",
    "orchestrator",
    "automation",
    "opencode",
    "testing",
    "ci-cd"
  ],
  "author": "fwdslsh",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fwdslsh/pace.git"
  },
  "bugs": {
    "url": "https://github.com/fwdslsh/pace/issues"
  },
  "homepage": "https://github.com/fwdslsh/pace#readme",
  "files": [
    "cli.ts",
    "pace-plugin.ts",
    "src/**/*.ts",
    "src/**/*.md",
    "README.md",
    "LICENSE",
    "install.sh"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.152",
    "@types/node": "^25.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4"
  }
}
